<div class="review-business-info">

  <% if (review.isNew()) { %>
    <h1>Complete your review:</h1>
  <% } else { %>
    <h1>Edit Your Review:</h1>
  <% } %>
  <h2>
    <a href="<%= "#business/" + business.id %>">
      <%= business.escape("name") %>
    </a>

  </h2>


  <address class="review-form-business-address">
  <span class="business-street-address">

  </span>
  <span class="business-city-state">
  </span>
  </address>

</div>


<form>
  <input type="hidden"
    name="review[business_id]"
    value="<%= business.id %>">




  <label>Rate</label>
  <div class="review-form-rating-wrapper group">
      <div class="stars group">
        <input type="radio" id="rating-1" name="review[rating]" value="1"
        <% if (1 == review.escape("rating")) { %> checked <% } %>>
        <label for="rating-1">
          1 star
          <span class="rating-text">
            Eek! Methinks not.
          <span>
        </label>


        <input type="radio" id="rating-2" name="review[rating]" value="2"
        <% if (2 == review.escape("rating")) { %>checked <% } %>>
        <label for="rating-2">
          2 star
          <span class="rating-text">
            Meh. I've experienced better.
          <span>
        </label>


        <input type="radio" id="rating-3" name="review[rating]" value="3"
        <% if (3 == review.escape("rating")) { %> checked <% } %>>
        <label for="rating-3">
          3 star
          <span class="rating-text">
            A-OK.
          <span>
        </label>


        <input type="radio" id="rating-4" name="review[rating]" value="4"
        <% if (4 == review.escape("rating")) { %> checked <% } %>>
        <label for="rating-4">
          4 star
          <span class="rating-text">
            Yay! I'm a fan.
          <span>
        </label>


        <input type="radio" id="rating-5" name="review[rating]" value="5"
        <% if (5 == review.escape("rating")) { %> checked <% } %>>
        <label for="rating-5">
          5 star
          <span class="rating-text">
            Woohoo! As good as it gets!
          <span>
        </label>
      </div>
  </div>




	<label for="review-content">Your Review</label>
	<textarea type="review-content" name="review[content]"
  value="<%= review.content %>"><%= review.escape("content") %>
	</textarea>

	<input type="submit" value="<%= review.isNew ? "Post": "Edit"  %>">
</form>
