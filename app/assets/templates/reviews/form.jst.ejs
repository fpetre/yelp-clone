<div class="review-business-info group">
  <div class="review-business-info-left">
  <% if (review.isNew()) { %>
    <h1>Complete your review:</h1>
  <% } else { %>
    <h1>Edit Your Review:</h1>
  <% } %>
  <h2>
    <a class="review-business-info-name" href="<%= "#business/" + business.id %>">
      <%= business.escape("name") %>
    </a>
  </h2>
</div>


  <address class="review-form-business-address">
  <span class="business-street-address">
    <%= business.escape("address") %>
  </span>
  <span class="business-city-state">
    <%= business.escape("city") + ", " + business.escape("state") %>
  </span>
  </address>

</div>


<form>
  <input type="hidden"
    name="review[business_id]"
    value="<%= business.id %>">





  <div class="review-form-rating-wrapper group">
    <label class="stars-rating-label">Rating</label>
      <div class="stars group">
        <input type="radio" id="rating-1" name="review[rating]" value="1"
        <% if (1 == review.escape("rating")) { %> checked <% } %>>
        <label for="rating-1" class="star-rating-<%= review.escape("rating") %>">
          1 star
          <span class="rating-text">
            Eek! Methinks not.
          <span>
        </label>


        <input type="radio" id="rating-2" name="review[rating]" value="2"
        <% if (2 == review.escape("rating")) { %>checked <% } %>>
        <label for="rating-2" class="star-rating-<%= review.escape("rating") < 2 ? 0 : review.escape("rating") %>">
          2 star
          <span class="rating-text">
            Meh. I've experienced better.
          <span>
        </label>


        <input type="radio" id="rating-3" name="review[rating]" value="3"
        <% if (3 == review.escape("rating")) { %> checked <% } %>>
        <label
        for="rating-3"
        class="star-rating-<%= review.escape("rating") < 3 ? 0 : review.escape("rating") %>">
          3 star
          <span class="rating-text">
            A-OK.
          <span>
        </label>


        <input type="radio" id="rating-4" name="review[rating]" value="4"
        <% if (4 == review.escape("rating")) { %> checked <% } %>>
        <label for="rating-4" class="star-rating-<%= review.escape("rating") < 4 ? 0 : review.escape("rating") %>">
          4 star
          <span class="rating-text">
            Yay! I'm a fan.
          <span>
        </label>


        <input type="radio" id="rating-5" name="review[rating]" value="5"
        <% if (5 == review.escape("rating")) { %> checked <% } %>>
        <label for="rating-5" class="star-rating-<%= review.escape("rating") < 5 ? 0 : review.escape("rating") %>">
          5 star
          <span class="rating-text">
            Woohoo! As good as it gets!
          <span>
        </label>
      </div>
  </div>



  <div class="review-content-input group">
  	<label class="review-content-label" for="review-content">Your Review</label>
  	<textarea class="review-content-textarea" type="review-content" name="review[content]"
    value="<%= review.content %>"><%= review.escape("content") %>
  	</textarea>
  </div>
  <button class="review-form-submit">
    <input type="submit" value="<%= review.isNew() ? "Post": "Edit"  %>">
  </button>
</form>
