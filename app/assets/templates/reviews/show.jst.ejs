
  <li class="reviews-review">
    <div class="reviews-review-header">
      <% if (YelpClone.loggedIn() && YelpClone.currentUser.reviews().get(review.id)) { %>
        <a href=<%= "#reviews/" + review.id + "/" + review.get("business_id") + "/edit" %>>Edit</a>
      <% } %>
      <a href=<%= "#business/" + review.get("business_id") %>>
        <%= review.escape("businessname") %>
      </a>
      <div class="reviews-review-header-rating-wrapper group">
        <div class="reviews-review-header-rating">
          <div class="<%= "rating-" + review.escape("rating") %>">
            Rating:<%= review.escape("rating") %>
          </div>
        </div>
        <span class="reviews-review-header-reviewdate">
          <%= review.escape("created_at") %>
        </span>
      </div>
    <div class="review-author">
      <%= review.escape('authorname') %>
    </div>

    <p class="reviews-review-content">
      <%= review.escape("content") %>
    </p>
  </li>
